.fixed-view-content {
  padding: 0 6px;
  height: 100rpx;
  width: 100rpx;
  line-height: 100rpx;
  
  text-align: center;
  color: #fff;
  background-color: #0dc1ae;
  border-radius: 90%;
  z-index: 66;
  
}
.icon{
  color: #0dc1ae;
  font-size: 35px;
}
.index-menu{
	width: 100%;
	display: -webkit-flex;
	display: -webkit-box;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
  position: absolute;
  top: 650rpx;
}
.index-menu-item{
	-webkit-flex: 0 0 40%;
	-webkit-box-flex: 0;
	flex: 0 0 40%;
	max-width: 40%;
	text-align: center;
	margin-top: 35rpx;
	padding: 20rpx 20rpx;
	box-sizing: border-box;
	margin-bottom: -1rpx;
  margin-left: 55rpx;
  background: white;
  border-radius: 10%;
  
}
.index-menu-item image{
	width: 110rpx;
	height: 110rpx;
  
}
.index-menu-item text{
	display: block;
	font-size: 30rpx;
	line-height: 1.4;
	white-space: nowrap;
  color: #0dc1ae;
}
.footer{
  text-align: center;
  position: absolute;
  color: #aaa;
  top: 800rpx;
  left: 30%;
}